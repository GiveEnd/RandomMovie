<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity"
    android:id="@+id/movieContainer"
    >

    <ImageView
        android:id="@+id/posterImage"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_margin="20sp"
         />


    <TextView
        android:id="@+id/movieInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:text=""
        android:textSize="15sp"
        android:textColor="@color/button_color_text"
        android:layout_below="@+id/posterImage"
        />

    <Button
        android:id="@+id/randomMovieButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:text="@string/button_random_name"
        android:textColor="@color/button_color_text"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20sp"
        android:visibility="visible"
        />

    <Button
        android:id="@+id/restartMovieButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:text="@string/button_restart_name"
        android:textColor="@color/button_color_text"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100sp"
        android:visibility="invisible"
        />

</RelativeLayout>